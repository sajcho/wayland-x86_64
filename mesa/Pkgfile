# Description:	Mesa DRI OpenGL library - release
# URL:		http://www.mesa3d.org
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	elfutils libdrm libglvnd llvm-toolchain lm-sensors python3-mako python3-yaml wayland-protocols

name=mesa
version=24.2.2
release=1
source=(https://archive.mesa3d.org/${name}-${version}.tar.xz)

build() {
	cd ${name}-${version}

	build-meson \
		-Dplatforms=wayland \
		-Dgallium-drivers=r300,r600,radeonsi,nouveau,panfrost,softpipe,llvmpipe,virgl \
		-Dvideo-codecs=av1dec,av1enc,h264dec,h264enc,h265dec,h265enc,vc1dec,vp9dec \
		-Dvulkan-drivers="" \
		-Dlmsensors=enabled \
		-Degl=enabled \
		-Dglvnd=enabled \
		-Dopengl=true \
		-Dglx=disabled \
		-Dlibunwind=disabled \
		-Dvalgrind=disabled \
		-Dbuild-tests=false \
		. build

	meson compile ${JOBS:+-j ${JOBS}} -v -C build

	DESTDIR=$PKG meson install --no-rebuild -C build
}
